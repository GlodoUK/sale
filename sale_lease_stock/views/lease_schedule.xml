<odoo>
    <record id="action_window_lease_schedule" model="ir.actions.act_window">
        <field name="name">Lease Schedule</field>
        <field name="res_model">sale_lease_stock.lease.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_lease_schedule_list" model="ir.ui.view">
        <field name="name">view_lease_schedule_list</field>
        <field name="model">sale_lease_stock.lease.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="line_id" />
                <field name="date" />
                <field name="currency_id" />
                <field name="price" />
                <field name="state" />
            </tree>
        </field>
    </record>
    <record id="view_lease_schedule_form" model="ir.ui.view">
        <field name="name">view_lease_schedule_form</field>
        <field name="model">sale_lease_stock.lease.schedule</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <field name="state" widget="statusbar" />
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                <button
                            class="oe_stat_button"
                            name="action_view_invoices"
                            type="object"
                            icon="fa-pencil-square-o"
                            attrs="{'invisible':[('invoice_count', '=', 0)]}"
                        >
                   <field string="Invoices" name="invoice_count" widget="statinfo" />
               </button>
                    </div>
                    <group>
                        <field name="line_id" />
                        <field name="date" />
                        <field name="currency_id" invisible="1" />
                        <field name="price" />
                        <field name="quantity_to_invoice" />
                    </group>
                    <group groups="base.group_no_one" name="aml">
                        <field name="account_move_line_ids">
                            <tree>
                                <field name="date" />
                                <field name="move_id" />
                            </tree>
                        </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record model="ir.actions.server" id="action_create_invoices">
        <field name="name">Create Invoices</field>
        <field name="model_id" ref="model_sale_lease_stock_lease_schedule" />
        <field name="state">code</field>
        <field name="code">
            action = records.action_create_invoices()
        </field>
        <field name="binding_model_id" ref="model_sale_lease_stock_lease_schedule" />
    </record>
</odoo>
