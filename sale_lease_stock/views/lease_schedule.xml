<odoo>
    <record id="action_window_lease_schedule" model="ir.actions.act_window">
        <field name="name">Lease Schedule</field>
        <field name="res_model">sale_lease_stock.lease.schedule</field>
        <field name="view_mode">tree,form</field>
    </record>
    <record id="view_lease_schedule_list" model="ir.ui.view">
        <field name="name">view_lease_schedule_list</field>
        <field name="model">sale_lease_stock.lease.schedule</field>
        <field name="arch" type="xml">
            <tree>
                <field name="line_id" />
                <field name="date" />
                <field name="currency_id" />
                <field name="price" />
                <field name="state" />
                <field name="invoice_id" />
            </tree>
        </field>
    </record>
    <record id="view_lease_schedule_form" model="ir.ui.view">
        <field name="name">view_lease_schedule_form</field>
        <field name="model">sale_lease_stock.lease.schedule</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button
                        name="action_create_invoices"
                        type="object"
                        string="Create Invoice"
                    />
                </header>
                <sheet>
                    <group>
                        <field name="line_id" />
                        <field name="date" />
                        <field name="currency_id" invisible="1" />
                        <field name="price" />
                        <field name="state" />
                        <field name="invoice_id" />
                        <field name="quantity_to_invoice" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
